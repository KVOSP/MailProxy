<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <welcome-file-list>
        <welcome-file>AccoutList.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>AddAccount</servlet-name>
        <servlet-class>controller.AddMailAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAccount</servlet-name>
        <url-pattern>/addaccount</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteAccount</servlet-name>
        <servlet-class>controller.DeleteAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAccount</servlet-name>
        <url-pattern>/deleteaccount</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HistoryQuary</servlet-name>
        <servlet-class>controller.HistoryQuary</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HistoryQuary</servlet-name>
        <url-pattern>/historyquary</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QueueQuary</servlet-name>
        <servlet-class>controller.QueueQuary</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueueQuary</servlet-name>
        <url-pattern>/queuequary</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SendMail</servlet-name>
        <servlet-class>controller.SendMail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendMail</servlet-name>
        <url-pattern>/sendmail</url-pattern>
    </servlet-mapping>
</web-app>
